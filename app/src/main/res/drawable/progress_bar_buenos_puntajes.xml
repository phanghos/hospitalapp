<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Color de fondo azul -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20dip" />

            <gradient
                android:angle="270"
                android:centerColor="@color/grisOscuro"
                android:centerY="0.95"
                android:endColor="@color/grisOscuro"
                android:startColor="@color/grisOscuro" />

        </shape>
    </item>

    <!-- Color de la barra amarillo -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- radius of secundary progress -->
                <corners android:radius="20dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/verdeBrillante"
                    android:centerY="0.95"
                    android:endColor="@color/verdeBrillante"
                    android:startColor="@color/verdeBrillante" />
            </shape>
        </clip>
    </item>


</layer-list>