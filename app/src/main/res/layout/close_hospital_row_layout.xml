<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_large">

    <TextView
        android:id="@+id/tvNombreHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/colorPrimaryText"
        fontPath="OpenSans-Bold.ttf" />

    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombreHospital"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_large"
        fontPath="OpenSans-Bold.ttf" />

    <LinearLayout
        android:id="@+id/lyAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvTipo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyAvg"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_size_normal" />

    <Button
        android:id="@+id/btnVer"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tvFecha"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:background="@drawable/boton_azul_opinion"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_normal"
        android:text="VER"
        fontPath="OpenSans-Bold.ttf" />

    <android.support.design.widget.FloatingActionButton
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_add_white_24dp"
        android:visibility="gone"
        app:elevation="0dp"
        app:fabSize="mini" />

</RelativeLayout>