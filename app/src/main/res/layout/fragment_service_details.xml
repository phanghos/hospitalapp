<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tvServiceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="@color/gris_title_ht"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/lyAvg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/grisOscuro"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grisDeLinea" />

                <ToggleButton
                    android:id="@+id/btnVerMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    android:textOff="@string/ver_mapa"
                    android:textOn="@string/ocultar_mapa"
                    android:textSize="14sp"
                    android:text="Ver mapa" />

                <LinearLayout
                    android:id="@+id/lyMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <FrameLayout
                        android:id="@+id/mapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grisDeLinea" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="30"
                            android:text="@string/excelente"
                            android:textSize="12sp" />


                        <ProgressBar
                            android:id="@+id/serv_deta_progress_5"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_weight="60"
                            android:max="100"
                            android:progressDrawable="@drawable/customprogressbar" />

                        <TextView
                            android:id="@+id/serv_deta_num_opinion_excelente"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="center_vertical|right"
                            android:text="0"
                            android:textColor="@color/gris_title_ht"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="30"
                            android:text="@string/muy_bueno"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/serv_deta_progress_4"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_weight="60"
                            android:max="100"
                            android:progressDrawable="@drawable/customprogressbar" />

                        <TextView
                            android:id="@+id/serv_deta_num_opinion_muy_bueno"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="center_vertical|right"
                            android:text="0"
                            android:textColor="@color/gris_title_ht"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="30"
                            android:text="@string/normal"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/serv_deta_progress_3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_weight="60"
                            android:max="100"
                            android:progressDrawable="@drawable/customprogressbar" />


                        <TextView
                            android:id="@+id/serv_deta_num_opinion_normal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="center_vertical|right"
                            android:text="0"
                            android:textColor="@color/gris_title_ht"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="30"
                            android:text="@string/malo"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/serv_deta_progress_2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_weight="60"
                            android:max="100"
                            android:progressDrawable="@drawable/customprogressbar" />

                        <TextView
                            android:id="@+id/serv_deta_num_opinion_malo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="center_vertical|right"
                            android:text="0"
                            android:textColor="@color/gris_title_ht"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="30"
                            android:text="@string/muy_malo"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/serv_deta_progress_1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_weight="60"
                            android:max="100"
                            android:progressDrawable="@drawable/customprogressbar" />

                        <TextView
                            android:id="@+id/serv_deta_num_opinion_muy_malo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="center_vertical|right"
                            android:text="0"
                            android:textColor="@color/gris_title_ht"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/escribeOpinion"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/boton_azul_opinion"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:text="@string/escribe_opinion"
                    fontPath="OpenSans-Bold.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/grisDeLinea" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivOpinions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_opinions" />

                        <TextView
                            android:id="@+id/tvOpiniones"
                            android:text="Opiniones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivOpinions"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/arrowOpiniones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/down_arrow_4" />

                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/deta_servicio_boton_opiniones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="47"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:textColor="@color/azul_tittle_ht"
                        android:textOff="@string/opiniones1"
                        android:textOn="@string/opiniones1"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_fragment_incrustado_detalle_servico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <FrameLayout
                        android:id="@+id/deta_servicio_incrustado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

    </LinearLayout>

</ScrollView>
